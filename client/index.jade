head
  title Media Strike

body
  nav.navbar.navbar-inverse
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="#") Media Strike
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav
          li.active
            a(href="#") Home
          li
            a(href="#") TV Shows

  .container
    h1 Media Strike

    .btn-group-vertical(role="group", aria-label="...")
      each folders
        +folder

    form.new-folder.form-inline
      .form-group
        input.form-control(type="text",name="text",placeholder="Type to add new folder")
      button.btn.btn-primary(type="submit") Add


template(name="folder")
  .input-group.folder-item
    input.form-control(type="text", placeholder="Type to add folder", value="#{folder}")
    span.input-group-addon
      span.glyphicon.glyphicon-remove
